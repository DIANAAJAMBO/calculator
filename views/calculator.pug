head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM' crossorigin='anonymous')
  link(rel='stylesheet' href='../index.css')
  title Document
.container
  .row
    .col
    #them.col
      form(action='/Save' method="post" onsubmit="submit(event)")
        input#screen.screen(type='text' readonly='' name='result')
        div#div(style="overflow:scroll ; height: 100px;") History 
          if (items.length > 0)
           each item in items
            div
              | #{item.first} #{item.operator} #{item.second} = #{item.result}
        .first
          | first number
          input#first(type='number' placeholder='first number' name='first')
        .operator
          input#operator(type='text' placeholder='+ , - , * , /' name='operator')
        .second
          | second number
          input#second(type='number' placeholder='second number' name='second')
        div
          button#calc.calc(onclick='calculate(event) ' type='submit') Calculate
    .col
script(src='../index.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz' crossorigin='anonymous')
