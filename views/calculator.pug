doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM' crossorigin='anonymous')
  link(rel='stylesheet' href='../public/index.css')
  title Document
.container
  .row
    .col
    #them.col
      input#screen.screen(type='text' readonly='' name="output")
      .first
        | first number
        input#first(type='string' placeholder='first number' name='firstNumber')
      .operator
        input#operator(type='text' placeholder='+ , - , * , /')
      .second
        | second number
        input#second(type='string' placeholder='second number' name='secondName')
      div
        button#calc.calc(onclick='calculate()') Calculate
    .col
script(src='./public/index.js')
